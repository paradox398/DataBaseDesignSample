.side-ber
  .header-user
    .top-items
      %p.top-items__user-name
        = current_user.name
      .top-items__icons
        = link_to new_group_path, class: 'top-items__icons top-items__icons--new-group' do
          = icon('fa', 'edit', class: 'top-items__icons--icon')
        = link_to edit_user_path(current_user.id), class: 'top-items__icons top-items__icons--user-edit' do
          = icon('fa', 'cog', class: 'top-items__icons--icon')
    
  .group-side
    - current_user.groups.each do |group|
      = link_to group_messages_path(group), class: 'group-list' do
        .group-list
          .group-list__group-name
            = group.name
          .group-list__group-message 
            = group.show_last_message
